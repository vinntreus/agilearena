<section class="column">
	<h2 class="left-aligned-header">Backlogs</h2>
	<div class="box-light">		
		<div class="box-content">
			<% unless @user.backlogs.empty? %>
				<ul class="backlogs fc">
					<%= render @backlogs %>
				</ul>
				<%= will_paginate @backlogs %>
			<% end %>
		</div>
	</div>	
</section>
<section class="column-right">
	<% unless @backlog.nil? %>
		<h2 class="left-aligned-header">Create new backlog</h2>
		<div class="box-lights">
				<div class="box-content">
					<%= render "backlogs/new_backlog_form" %>
				</div>
		</div>
	<% end %>

</section>
