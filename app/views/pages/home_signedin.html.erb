<h1>
	<%= gravatar_for @user %>
  Hi <%= @user.name %>
</h1>

<section class="double-column">
	<div class="box">		
		<div class="box-content">
			<a href="#" class="button right toggle-block" data-toogle="#new_backlog_form">Create new backlog</a>
			<h2>Backlogs</h2>
			<% unless @user.backlogs.empty? %>
				<ul class="backlogs fc">
					<%= render @backlogs %>
				</ul>
				<%= will_paginate @backlogs %>
			<% end %>
		</div>
	</div>
</section>

<section class="double-column hidden" id="new_backlog_form">
	<div class="box">
		<% unless @backlog.nil? %>
			<%= render "shared/backlog_form" %>
		<% end %>
	</div>
</section>

