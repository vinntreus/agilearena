<%= form_for @backlog_item do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
  	<label>Title</label>
    <%= f.text_field :title %>
  </div>
   <div class="field">
  	<label>Description</label>
    <%= f.text_area :description, :rows => 8 %>
  </div>
  <div class="field">
  	<label>Points</label>
  	<%= select(:backlog_item, :points, Backlog::POINTS, :include_blank => "?") %>
  </div>
  <div class="field">
  	<label>Status</label>
  	<%= select(:backlog_item, :status, Backlog::STATUSES) %>
  </div>
  <div class="actions">
    <%= f.submit "Save" %>
    <%= link_to "Cancel", @backlog_item %>
  </div>
<% end %>
