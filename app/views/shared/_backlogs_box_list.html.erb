<section class="column">
	<div class="box">		
		<div class="box-content">
			<% unless @backlog.nil? %>
				<a href="#" class="button create-item-button toggle-block" data-toogle="#new_backlog_form">Create new backlog</a>
			<% end %>
			<h2>Backlogs</h2>
			<% unless @user.backlogs.empty? %>
				<ul class="backlogs fc">
					<%= render @backlogs %>
				</ul>
				<%= will_paginate @backlogs %>
			<% end %>
		</div>
	</div>
</section>


<section class="column hidden" id="new_backlog_form">
	<% unless @backlog.nil? %>
		<div class="box">
				<div class="box-content">
					<h2 class="box-heading">Create new backlog</h2>
					<%= render "shared/backlog_form" %>
				</div>
		</div>
	<% end %>
</section>

