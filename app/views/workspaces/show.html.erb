<section class="workspace-start">
	<%= link_to "Create new backlog", new_backlog_path, {:class => "create-new-backlog-link"} %>
	<h1 class="left-aligned-header">Backlogs</h1>
	<div class="box-light">		
		<div class="box-content">
			<% unless @user.backlogs.empty? %>
				<ul class="backlogs fc">
					<%= render @backlogs %>
				</ul>
				<%= will_paginate @backlogs %>
			<% end %>
		</div>
	</div>	
</section>
