<h1><%= @sprint.display_title %></h1>

<div class="fc" id="backlog-page">

	<section class="large-column">	
	
		<div class="box">			
			<div class="box-content">				
				<h2 class="box-heading">Stories</h2>
				<ul id="sprint-items-list" class="backlog-items fc" data-sprint-id="<%= @sprint.id %>">
						<%= render @backlog_items %>
				</ul>	
			</div>
		</div>
		
	</section>	
	
	<section class="small-column">
		<div class="box-tab">
			<h2 class="left-aligned-header">Members</h2>
		</div>
		<div class="box collaborators">
			<%= render  :partial => "collaborators/image_list_collaborator", 
									:locals => {:collaborators => @sprint.backlog.collaborators} %>
		</div>
	</section>
	
</div>
